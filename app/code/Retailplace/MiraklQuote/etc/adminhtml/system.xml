<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="mirakl_api">
            <group id="general">
                <field id="operator_api_key" translate="label comment" type="text" sortOrder="35" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Operator API Key</label>
                    <comment><![CDATA[Operator API key used to update Offers of any Seller]]></comment>
                </field>
            </group>
        </section>
        <section id="mirakl_sync">
            <group id="mirakl_quote" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="190" translate="label comment">
                <label>Mirakl Quote</label>
                <field id="offers_quotable_schedule" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Cronjob Schedule to make Offers Quotable</label>
                </field>
            </group>
        </section>
    </system>
</config>
