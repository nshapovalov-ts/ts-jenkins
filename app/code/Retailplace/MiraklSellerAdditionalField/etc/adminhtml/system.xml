<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="catalog" translate="label" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <tab>catalog</tab>
            <group id="frontend" translate="label" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                <field id="disable_sort_by_price" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Disable sorting by price</label>
                    <comment><![CDATA[If enabled, price sorting will be disabled]]></comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
