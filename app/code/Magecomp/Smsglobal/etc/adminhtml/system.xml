<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Magento/Backend/etc/system_file.xsd">
    <system>
		<section id="smspro">
				<group id="smsgatways">
					<field id="smsglobalapikey" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
						<label>SmsGlobal API Key</label>
						<depends>
							<field id="smspro/general/enable">1</field>
							<field id="gateway">smsglobal</field>
						</depends>
						<validate>required-entry</validate>
					</field>
					<field id="smsglobalapisecrate" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
						<label>SmsGlobal API Secrate</label>
						<depends>
							<field id="smspro/general/enable">1</field>
							<field id="gateway">smsglobal</field>
						</depends>
						<validate>required-entry</validate>
					</field>
					<field id="smsglobalapiurl" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
						<label>API URL</label>
						<comment><![CDATA[http://api.smsglobal.com/v2/smspro/]]></comment>
						<depends>
							<field id="smspro/general/enable">1</field>
							<field id="gateway">smsglobal</field>
						</depends>
						<validate>required-entry validate-url</validate>
					</field>
				</group>
		</section>
    </system>
</config>