<ruleset name="Magento">
    <description>Magento coding standard.</description>
    <rule ref="../../../../vendor/magento/magento-coding-standard/Magento2"/>
    <!-- Exclude _files, unit tests and registration from validation -->
    <exclude-pattern>*/_files/*</exclude-pattern>
    <exclude-pattern>*/Test/*</exclude-pattern>
    <exclude-pattern>*Test.php</exclude-pattern>
    <exclude-pattern>*/registration.php</exclude-pattern>
</ruleset>
