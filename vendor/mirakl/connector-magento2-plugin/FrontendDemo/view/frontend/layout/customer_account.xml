    <body>
        <referenceContainer name="sidebar.main">
            <referenceBlock name="customer_account_navigation">
                <block class="Magento\Customer\Block\Account\SortLinkInterface" name="marketplace-message-link">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true">My Messages</argument>
                        <argument name="path" xsi:type="string">marketplace/message</argument>
                        <argument name="sortOrder" xsi:type="number">225</argument>
                    </arguments>
                </block>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
